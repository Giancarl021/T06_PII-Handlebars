<section class="section container">
    <div class="level">
        <div class="level-left">
            <h1 class="title level-item">Pessoas</h1>
        </div>
        <div class="level-right">
            <a href="/search" class="button is-link level-item">
            Pesquisar
            </a>
        <a href="/insert" class="button is-primary level-item">
            Inserir
        </a>
        </div>
    </div>
    {{#each person}}
    <div class="card">
        <div class="card-content">
            <div class="media">
                <div class="media-content">
                    <p class="title is-4">{{this.firstName}}</p>
                    <p class="subtitle is-6">{{this.lastName}}</p>
                </div>
            </div>
        </div>
    </div>
    <br />
    {{/each}}
</section>