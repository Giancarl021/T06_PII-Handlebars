<script src="/assets/js/search.js"></script>

<section class="section container">
    <div class="level">
        <div class="level-left">
            <h1 class="title level-item">Pesquisa</h1>
        </div>
        <div class="level-right">
            <input type="text" class="input level-item" value="{{search}}" placeholder="Busque aqui" />
            <button class="button level-item is-link" onclick="search()">Pesquisar</button>
            <a href="/" class="button level-item is-warning">Voltar</a>
        </div>
    </div>
    {{#if person}}
        {{#each person}}
        <div class="card">
            <div class="card-content">
                <div class="media">
                    <div class="media-content">
                        <p class="title is-4">{{this.firstName}}</p>
                        <p class="subtitle is-6">{{this.lastName}}</p>
                    </div>
                </div>
            </div>
        </div>
        <br />
        {{/each}}
    {{else}}
    <h2 class="subtitle">Insira algo no campo de busca</h2>
    {{/if}}

</section>